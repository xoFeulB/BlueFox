{
    "manifest_version": 3,
    "name": "^.,.^ BlueFox",
    "version": "0.5.1",
    "description": "Agile Web Automation Software for Time-Starved Professionals",
    "host_permissions": [
        "<all_urls>"
    ],
    "permissions": [
        "cookies",
        "tabs",
        "debugger"
    ],
    "background": {
        "service_worker": "/background/js/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/content/js/document_start.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/modules/css-selector-generator/css-selector-generator.js",
                "/content/js/document_idle.js",
                "/content/js/event_observer.js",
                "/modules/BlueFoxJs/bluefox.min.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "chrome_url_overrides": {
        "newtab": "/tab/html/index.html"
    },
    "icons": {
        "16": "/media/icons/16.png",
        "48": "/media/icons/48.png",
        "128": "/media/icons/128.png"
    }
}